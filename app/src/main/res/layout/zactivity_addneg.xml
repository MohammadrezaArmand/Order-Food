<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8eded"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:background="@drawable/date"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/lydate1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/txtaddyear1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.30"
                android:gravity="center"
                android:text="0000"
                android:textColor="#ffffff"
                android:textSize="23sp"
                app:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.70"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtaddmonth1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="25sp"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/" />

                <TextView
                    android:id="@+id/txtaddday1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="25sp"

                    app:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add2subject"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/edtsubject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.50"
            android:ems="10"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/add2price"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/edtpriceneg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.50"
            android:ems="10"

            android:inputType="numberDecimal"


            />

    </LinearLayout>

    <Button
        android:id="@+id/btnaddsubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Subjet" />

    <Button
        android:id="@+id/btnbackadmin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Admin" />
</LinearLayout>